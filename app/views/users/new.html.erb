<% content_for :title do %>
 Add a new user
<% end %>
<h1>New Users</h1>

<% if flash[:error_messages] %>
	<% flash[:error_messages].each do |error| %>
		<p><%= error %></p>
	<% end %>
<% else %>
	<p><%= flash[:success_message] %></p>
<% end %>

<%= simple_form_for @user do |f| %>
	<%= f.input :first_name %>
	<%= f.input :last_name %>
	<%= f.input :email_address %>
	<%= f.input :password %>
	<%= f.button :submit, value: "Submit a User" %>
<% end %>