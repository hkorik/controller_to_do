<% content_for :title do %>
	Edit User Info
<% end %>
<h1>Edit User <%= @user.id %> Info</h1>

<% if flash[:error_messages] %>
	<% flash[:error_messages].each do | error | %>
		<p><%= error %><p>
	<% end %>
<% else %>
	<p><%= flash[:success_message] %></p>
<% end %>


<form action="/users/<%= @user.id %>" method="post">
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
	<input type="hidden" name="_method" value="put">
	<input type="text" name="user[first_name]" value="<%= @user.first_name %>">
	<input type="text" name="user[last_name]" value="<%= @user.last_name %>">
	<input type="text" name="user[email_address]" value="<%= @user.email_address %>">
	<input type="password" name="user[password]" placeholder="Password">
	<input type="submit" value="Edit User">
</form>